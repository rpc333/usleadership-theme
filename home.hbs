{{!< default}}

<main id="site-main" class="site-main outer">
    <!-- from post.hbs -->
    <div class="inner">
        {{#page}}
            <article class="post-full {{post_class}} {{#if feature_image}}with-image{{else}}no-image{{/if}}">
                <header class="post-content-header">
                    {{#if feature_image}}
                        <img class="splash-image" srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                            sizes="(max-width: 600px) 600px, (max-width: 1000px) 1000px, 4000px"
                            src="{{img_url feature_image size="m"}}" alt="{{title}}" />
                    {{/if}}
                    <h1 class="post-content-title">{{title}}</h1>
                </header>
                <section class="post-full-content">
                    <div class="post-content">

                        {{content}}
                    </div>
                </section>

            </article>
        {{/page}}
    </div>

    <!-- get the list of posts -->
    {{#get "posts"}}
        <div class="inner posts">
            <div class="post-feed">
                {{#foreach posts}}

                    {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                    {{> "post-card"}}

                {{/foreach}}
            </div>
        </div>
    {{/get}}
</main>
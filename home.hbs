{{!< default}}

{{#page}}
    {{#if feature_image}}
        <img class="splash-image" srcset="{{img_url feature_image size="s"}} 300w,
            {{img_url feature_image size="m"}} 600w,
            {{img_url feature_image size="l"}} 1000w,
            {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 600px) 600px, (max-width: 1000px) 1000px, 4000px"
            src="{{img_url feature_image size="m"}}" alt="{{title}}" />
    {{/if}}
    <article class="content-container {{post_class}} {{#if feature_image}}with-image{{else}}no-image{{/if}}">
        <header class="post-content-header">
            <h1 class="post-content-title">{{title}}</h1>
        </header>
        <section class="post-full-content">

            {{content}}

        </section>

    </article>
{{/page}}

<!-- get the list of posts -->
{{#get "posts"}}
    <div class="feed-preview content-container">
        <h2 class="feed-preview-title">
            <a href="/news/">Latest updates</a>
        </h2>
        <div class="post-feed">
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}

            {{/foreach}}
        </div>
    </div>
{{/get}}

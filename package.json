{
    "name": "usleadership-theme",
    "description": "The Ghost theme for the American Leadership Foundation website.",
    "version": "2.0.0",
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "license": "MIT",
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "The American Leadership Foundation",
        "email": "contact@usleadership.org",
        "url": "https://usleadership.org"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/rpc333/usleadership-theme.git"
    },
    "browserslist": [
        "defaults"
    ],
    "devDependencies": {
        "gscan": "4.10.1",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-sass": "^5.0.0",
        "gulp-sourcemaps": "3.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "sass": "^1.43.4"
    },
    "config": {
        "posts_per_page": 15,
        "image_sizes": {
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    }
}
